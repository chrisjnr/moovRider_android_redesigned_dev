<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="7dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="7dp">

                    <ImageView
                        android:id="@+id/imgRiderImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/user_placeholder" />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="86dp"
                    android:layout_marginRight="90dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRiderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Femi Kelechi"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvCarModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toyota Corolla"
                        android:textColor="@color/grayDark"
                        android:textSize="12dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <com.github.ornolfr.ratingview.RatingView
                            android:id="@+id/rating1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:drawable_empty="@mipmap/yellowstar_empty"
                            app:drawable_filled="@mipmap/yellowstar_full"
                            app:drawable_half="@mipmap/yellowstar_half"
                            app:drawable_margin="0dp"
                            app:drawable_size="14dp"
                            app:is_indicator="true"
                            app:max_count="5"
                            app:rating="4" />

                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCancelRide"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/layout_primary_little_rounded_bg"
                    android:gravity="center"
                    android:text="Cancel Ride"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grayLite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="10dp"
                        android:textColor="@color/grayDark"/>

                    <TextView
                        android:id="@+id/tvRiderPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="081 2347 8900"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".95"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        android:textSize="10dp"
                        android:textColor="@color/grayDark"/>

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15 Km"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plate Number"
                        android:textSize="10dp"
                        android:textColor="@color/grayDark"/>

                    <TextView
                        android:id="@+id/tvCarNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ABJ 93CL"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".95"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ETA"
                        android:textSize="10dp"
                        android:textColor="@color/grayDark"/>

                    <TextView
                        android:id="@+id/tvEta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 Minutes"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>