<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvEta"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Mins Away"/>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgRiderImage"
                android:src="@mipmap/user_placeholder"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />

            <LinearLayout
                android:padding="8dp"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvRiderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Kelechi"/>

                <TextView
                    android:text="4.5 Stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_call" />
                </android.support.v7.widget.CardView>
            </RelativeLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/user_placeholder"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />

            <LinearLayout
                android:padding="8dp"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCarModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toyota Camry"/>

                <TextView
                    android:text="Silver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



                    <TextView
                        android:id="@+id/tvCarNumber"
                        android:background="@drawable/border_gray"
                        android:textAlignment="textEnd"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:layout_gravity="end|center_vertical"
                        android:textAllCaps="true"
                        android:text="XX50GS" />










        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_marginTop="20dp"
            android:id="@+id/cardViewNext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/buttons"
            app:cardCornerRadius="25dp"
            app:cardElevation="7dp">

            <TextView
                android:id="@+id/tvCancelRide"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="CANCEL"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>





</android.support.v7.widget.CardView>
