<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    android:id="@+id/prevRideDateNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/prevRideMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TUE"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/prevRideYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_weight="5"
                android:background="@color/semi_transparent"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:weightSum="6"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/left"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="5"
                            android:weightSum="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:maxLines="1"
                                android:background="@drawable/border_white"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:textColor="#ffa944"
                                tools:text="Current Location"
                                android:id="@+id/previousRideLocation"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="0dp" />

                            <View
                                android:background="@color/gray"
                                android:layout_width="match_parent"
                                android:layout_weight=".01"
                                android:layout_height="0dp"/>

                            <LinearLayout
                                android:weightSum="5"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <TextView
                                    android:maxLines="1"
                                    android:inputType="text"
                                    android:background="@drawable/border_white"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    android:layout_weight="5"
                                    android:textColor="@color/gray"
                                    android:fontFamily="@font/lato_regular"
                                    android:id="@+id/previousRideDestination"
                                    tools:text="Destination"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent" />

                            </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/previousRideTime"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:text="7.00"
                android:textStyle="bold"
                android:fontFamily="@font/lato_black"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:textAlignment="center"
                />



        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
