<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_centerVertical="true"
    android:padding="20dp"
    android:background="@color/grayLitest">








                <android.support.v7.widget.CardView
                    android:id="@+id/subjectBox"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">


                        <EditText
                            android:drawablePadding="10dp"
                            android:drawableLeft="@mipmap/email_icon"
                            android:id="@+id/edSubject"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:hint="Subject"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:drawableStart="@mipmap/email_icon" />

                </android.support.v7.widget.CardView>



                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:background="@color/gray" />-->

                <android.support.v7.widget.CardView
                    android:layout_below="@id/subjectBox"
                    android:id="@+id/messageBox"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="190dp">


                    <EditText
                        android:id="@+id/edMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="Message"
                        android:gravity="start"
                        android:paddingTop="10dp"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_below="@id/messageBox"
                app:cardCornerRadius="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/buttons"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:text="SUBMIT"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>
            </android.support.v7.widget.CardView>



    </RelativeLayout>
